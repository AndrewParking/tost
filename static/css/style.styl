body
    background #f5f5f5

header
    background #fff
    height 50px
    box-shadow 0px 0px 2px 2px #ddd
    margin-bottom 25px

    .logo
        line-height 50px
        font-size 17px
        font-weight bold
        color #424242

        &:hover
            text-decoration none

    ul li
        float right
        display block
        height 50px
        line-height 50px

        a
            display block
            width 100%
            height 100%
            padding-left 20px
            padding-right 20px
            transition all .3s ease-in-out
            border-bottom 0 solid #4285f4

            &:hover
                text-decoration none
                border-bottom 5px solid #4285f4

.form-container
    width 500px
    margin 0 auto
    margin-top 100px
    padding-bottom 50px

.forgot-link
    margin-left 20px

.questions-nav,
.questions-title
    padding 0 10px

.search-form
    margin-bottom 40px

.search-results
    background #ddd
    padding 10px 25px
    border-radius 4px
    margin-bottom 10px
    box-shadow 0 1px 4px #aaa

.question-wrapper
    padding 15px

    .question
        background #fff
        padding 10px 25px
        border-radius 4px
        box-shadow 0 1px 4px #aaa
        transition box-shadow .4s ease-in-out

        &:hover
          box-shadow 0 4px 12px #aaa

.active
    box-shadow 0 1px 4px #aaa

.questions-nav .nav-pills .cat-tab
    box-shadow 0 1px 4px #aaa
    margin-right 15px
    transition box-shadow .4s ease-in-out
    border-radius 4px
    background-color #fff !important

    &:hover
        background-color #fff !important
        box-shadow 0 4px 12px #aaa